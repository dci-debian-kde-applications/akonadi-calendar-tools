Description: Add Kubuntu XML feeds to Akregrator defaults
 This possibly should be upstreamed by implementing a mechanism to enable
 distros to easily do this without having to patch the source. Load a simple
 json file maybe?
Author: Harald Sitter <sitter@kde.org>
Origin: vendor
Forwarded: not
Last-Update: 2015-08-14
---
This patch header follows DEP-3: http://dep.debian.net/deps/dep3/
Index: kdepim/akregator/src/akregator_part.cpp
===================================================================
--- kdepim.orig/akregator/src/akregator_part.cpp	2016-01-28 11:20:17.772835263 +0100
+++ kdepim/akregator/src/akregator_part.cpp	2016-01-28 11:23:54.544083504 +0100
@@ -175,6 +175,30 @@
     spanishKde.setAttribute(QStringLiteral("xmlUrl"), QStringLiteral("http://planet.kde-espana.es/"));
     spanishFolder.appendChild(spanishKde);
 
+    QDomElement kubuntuFolder = doc.createElement(QStringLiteral("outline"));
+    debianFolder.setAttribute("text","Kubuntu");
+    body.appendChild(kubuntuFolder);
+
+    QDomElement planet = doc.createElement(QStringLiteral("outline"));
+    planet.setAttribute("text",i18n("Planet Ubuntu"));
+    planet.setAttribute("xmlUrl","http://planet.ubuntu.com/rss20.xml");
+    kubuntuFolder.appendChild(planet);
+
+    QDomElement fridge = doc.createElement(QStringLiteral("outline"));
+    fridge.setAttribute("text",i18n("Ubuntu Fridge"));
+    fridge.setAttribute("xmlUrl","http://feeds.feedburner.com/ubuntu-fridge");
+    kubuntuFolder.appendChild(fridge);
+
+    QDomElement dtimes = doc.createElement(QStringLiteral("outline"));
+    dtimes.setAttribute("text",i18n("Kubuntu.org News"));
+    dtimes.setAttribute("xmlUrl","http://www.kubuntu.org/news/feed");
+    kubuntuFolder.appendChild(dtimes);
+
+    QDomElement wire = doc.createElement(QStringLiteral("outline"));
+    wire.setAttribute("text",i18n("Kubuntu Wire"));
+    wire.setAttribute("xmlUrl","http://wire.kubuntu.org/?feed=rss2");
+    kubuntuFolder.appendChild(wire);
+
     return doc;
 }
 }
